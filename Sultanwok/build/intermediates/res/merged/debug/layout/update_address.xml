<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
     android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
     <android.support.design.widget.TextInputLayout
        android:id="@+id/name_text_input_layout_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" >
        <EditText
            android:id="@+id/address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Address Name"

            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" >
        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Street"

            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>
     <android.support.design.widget.TextInputLayout
        android:id="@+id/name_text_input_layout_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" >
        <AutoCompleteTextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="State"

            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>
    
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_text_input_layout_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" >
        <AutoCompleteTextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="City"

            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>

   
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_text_input_layout_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" >
        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pincode"
			android:inputType="number"
            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>

    
    
    <Button
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:text="Save Address"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@color/app_theme_color"
        />
</LinearLayout>